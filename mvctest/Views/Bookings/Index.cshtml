@model IEnumerable<mvctest.Models.Bookings>

@{
    ViewData["Title"] = "Index";
}
<br /><br /><br /><br />
<h2>Purchased Bookings</h2>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                Booking Date
            </th>
            <th>
                Booking #
            </th>
            <th>
                Traveler Count
            </th>
            <th>
                Trip Type
            </th>
            <th>
                Package ID
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TravelerCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TripTypeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PackageId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookingId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.BookingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
