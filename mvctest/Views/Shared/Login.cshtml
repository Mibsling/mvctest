@model mvctest.Models.Customers


<form class="form-inline" asp-controller="Customers" asp-action="LogIn">
    <input asp-for="CustEmail" class="form-control col-md-3" placeholder="email" />
    <span asp-validation-for="CustEmail" class="text-danger"></span>
    <input asp-for="PasswordNotHashed" class="form-control col-md-3" placeholder="pass" type="password" />
    <span asp-validation-for="PasswordNotHashed" class="text-danger"></span>
        <input type="submit" value="Log In" class="btn btn-primary" />
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
