@model IEnumerable<mvctest.Models.Agencies>

@{
    ViewData["Title"] = "Index";
}

<div class="hero-wrap" style="background-image: url('../images/maldives-1.jpeg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text d-flex align-itemd-end justify-content-center">
            <div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
                <div class="text">
                    @*<p class="breadcrumbs mb-2"><span>Registration</span></p>*@
                    <h1 class="mb-4 bread">Contact Us</h1>
                </div>
            </div>
        </div>
    </div>
</div>

            <div class="container justify-content-center">
                <div class="row d-flex mb-5 contact-info justify-content-center">

                    @foreach (var item in Model){
                    <div class="w-100"></div>
                    <div class="col-md-3 d-flex">
                        <div class="info bg-white p-4">
                            <h2 class="h3">Address</h2>
                            <hr />
                            <p> @Html.DisplayFor(modelItem => item.AgncyAddress)</p>
                            <p>@Html.DisplayFor(modelItem => item.AgncyCity), @Html.DisplayFor(modelItem => item.AgncyProv)</p>
                            <p>@Html.DisplayFor(modelItem => item.AgncyPostal), @Html.DisplayFor(modelItem => item.AgncyCountry)</p>
                        </div>
                    </div>
                    <div class="col-md-3 d-flex">
                        <div class="info bg-white p-4">
                            <h2 class="h3">Phone</h2>
                            <hr />
                            <p>
                                @Html.DisplayFor(modelItem => item.AgncyPhone),  @Html.DisplayFor(modelItem => item.AgncyFax)
                            </p>
                        </div>
                    </div>
                    <hr />}
                </div>
            </div>
           



